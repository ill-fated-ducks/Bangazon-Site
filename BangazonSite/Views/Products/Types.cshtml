@model Bangazon.Models.ProductViewModels.ProductTypesViewModel

@{
    ViewData["Title"] = "Product Types";
}
<h2 class="top-buffer">Product Types</h2>

<div class="row">
    <div class="col-md-10"> <h4>Type</h4> </div>
    <div class="col-md-2">Products</div>
</div>
@foreach (var type in Model.ProductTypes)
{
    <div class="row">
        <div class="col-md-10">
            <a asp-controller="ProductTypes" asp-action="Detail" asp-route-type="@type.ProductTypeId">
                @Html.DisplayFor(modelItem => type.Label)
            </a>
        </div>
        <div class="col-md-2">@Html.DisplayFor(modelItem => type.Quantity)</div>
    </div>
}
